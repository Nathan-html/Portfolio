generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

model Achievement {
  id       Int    @id @default(autoincrement())
  tag      String
  title    String
  desc     String
  imageAlt String
  imageSrc String
}

model Skill {
  id       Int    @id @default(autoincrement())
  name     String
  title    String
  desc     String
  imageAlt String
  imageSrc String
}

model Historyitem {
  id           Int                   @id @default(autoincrement())
  year         String
  achievements Historyachievements[]
}

model Historyachievements {
  id            Int          @id @default(autoincrement())
  state         String?
  title         String
  desc          String?
  place         String?
  /// Relation OneToMany
  historyitemId Int?
  Historyitem   Historyitem? @relation(fields: [historyitemId], references: [id])
}

enum Role {
  USER
  ADMIN
  OWNER
}
